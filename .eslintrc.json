{
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "no-only-tests"
  ],
  "ignorePatterns": [
    "public/"
  ],
  "rules": {
    "no-unused-vars": "error",
    "no-multiple-empty-lines": "error",
    "curly": [
      2,
      "all"
    ],
    "no-only-tests/no-only-tests": "error",
    "semi": "error",
    "import/no-anonymous-default-export": 0
  }
}
